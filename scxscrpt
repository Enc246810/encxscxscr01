    aaa = gg.alert("DONATE\nEven the smallest donation you make can save me from the difficult conditions of this economy.  And I can take care of you. üòáüíó", "DONATE", "NO SORRY")
    if aaa == 1 then
      gg.alert("Donation, only supporting Patreon.")
      gg.copyText("https://www.patreon.com/user/membership?u=86903282")
