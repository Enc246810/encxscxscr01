local aWait = {}
local ofsetOffsets = {}
local ofsetValues = {}

function valueNotFound()
	gg.alert("Value not found. Please contact the developer for new functions.")
    return
end

function alertForZeroTimeItems()
  aa = gg.alert('Step 1:\nCopy saved value and search.\n\nStep 2:\nSave all finded values and use ofset "-4".\n\nStep 3:\nReplace all saved values.\n\nStep 4:\nClick "YES" Button.\n\nAre you now ready?', "YES", "NO", "CANCEL")
  
  if aa == 3 then
	aWait = 0
	gg.toast("\nCANCEL")
	return
  end
  
  if aa == 2 then
    gg.toast("\nOkay. I waiting you.")
  end
  
  if aa == 1 then
    gg.refineNumber("60000~30000000")
    gg.getResults("200")
    gg.editAll("0",gg.TYPE_DWORD)
    gg.toast("\nSuccessful. Enjoy!")
    aWait = 0
    gg.clearResults()
  end
end

function ofsets()
  gg.sleep("200")
  R = gg.getResults(1)
  local ofset = {}
  ofset[1] = {}
  ofset[1].address = R[1].address + ofsetOffsets
  ofset[1].flags = gg.TYPE_DWORD
  ofset[1].value = ofsetValues
  ofset[1].freeze = false
  gg.addListItems(ofset)
  gg.setValues(ofset)
  gg.setVisible(false)
end

function mainMenu()
  
  m1 = gg.choice({"üíó‚îÉHelp to SCS", "‚åõ‚îÉSet 0 All building time", "üíµ‚îÉ48k simcash", "üí∞‚îÉ16m simoleon", "‚ùå‚îÉExit"},nil,"[BETA] Your date is: "..os.date("%d/%m/%Y"))
  
